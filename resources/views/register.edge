  <script>
    $(document).ready(function(){
      $('#email').blur(function () {
          var error_email = '';
          var email = $('#email').val();
          var _token = $('input[name="_csrf"]').val();
          var filter = /^([a-zA-Z0-9_\.\-])+\@(([a-zA-Z0-9_\.\-])+\.)+([a-zA-Z0-9]{2,4})+$/;

          if (!filter.test(email)) {
            $('#error_email').html('<label class="text-danger">Invalid Email</label>');
            $('#email').addClass('has-error');
            $('#register').attr('disabled', 'disabled');
          }
          else{
            $.ajax({
              url:"{{route('')}}",
              method:"POST",
              data:{email:email, _csrf:_csrf},
              success:function (result) {
                if(result == 'unique'){
                  $('#error_email').html('<label>not yet registered</label>');
                  $('#register').attr('disabled',false);
                }
                else{
                  $('#error_email').html('<label>email have been registered</label>');
                }
              }
            })
          }
      });
    })
